<Window x:Class="SGService.LaserRangingModule.Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGService.LaserRangingModule.Monitor"
        mc:Ignorable="d"
        Title="LaserRangingModuleMonitor" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Config">
                <Grid Background="#FFE5E5E5">
                    <!-- 同一列：狀態(左) → 標籤 → 下拉 → 重新整理 → Connect(右) -->
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- 狀態 -->
                            <ColumnDefinition Width="12"/>
                            <!-- 間距 -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- 標籤 -->
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <!-- 下拉（彈性伸展） -->
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Refresh/掃描 -->
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Connect(主要動作) -->
                        </Grid.ColumnDefinitions>

                        <!-- 狀態指示：固定顯示 Disconnected（先不綁邏輯） -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="ConnDot" Width="10" Height="10" Fill="Gray" Margin="0,0,6,0"/>
                            <TextBlock x:Name="TxtConnStatus" Text="Disconnected" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 標籤 -->
                        <TextBlock Grid.Column="2" Text="可用 COM：" VerticalAlignment="Center"/>

                        <!-- 下拉 -->
                        <ComboBox x:Name="CmbPorts" Grid.Column="4" Width="220"/>

                        <!-- 重新整理（沿用你的掃描事件） -->
                        <Button x:Name="BtnScan"
                                Grid.Column="6"
                                Content="掃描"
                                Width="80"
                                Click="BtnScan_Click"/>

                        <!-- Connect 主要動作（先不綁 Click、不寫邏輯） -->
                        <Button x:Name="BtnConnect"
                                Grid.Column="8"
                                Content="Connect"
                                Width="100"
                                IsEnabled="False"
                                Click="BtnConnect_Click"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Measurement">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
